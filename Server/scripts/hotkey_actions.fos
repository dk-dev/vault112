bool EndTurnBasedTurn()
{
	if(__ConsoleActive == true) 
		return false;
	
	CritterCl@ chosen = GetChosen();
	if(valid(chosen) && chosen.IsTurnBasedTurn())
	{
		RunServerScriptUnsafe( "combat@unsafe_EndTurnBasedTurn", 0, 0, 0, null, null );
		return true;
	}
	
	return false;
}

