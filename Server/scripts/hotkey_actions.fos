void ShowGroundPickUpScreen()
{
	CritterCl@ chosen = GetChosen();
	if(!valid(chosen) || !chosen.IsLife())
		return;
		
	RunServerScriptUnsafe( "item@unsafe_GroundPickUp", 0, 0, 0, null, null );
}
